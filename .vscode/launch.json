    "version": "0.2.0",
    "configurations": [
        {
            "name": "Backend",
            "type": "go",
            "request": "launch",
            "mode": "auto",
            "program": "${workspaceFolder}/backend/main.go",
            "args": [
                "-mode=replay",
                // "-mode=live",
                "-symbol=BTCUSDT",
                "-config=config.yaml",
                "-api-port=8080"
            ]
        },
        {
            "name": "npm start",
            "type": "node",
            "request": "launch",
            "program": "${workspaceFolder}/frontend/package.json",
            "runtimeExecutable": "npm",
            "runtimeArgs": ["start"],
            "cwd": "${workspaceFolder}/frontend",
            "console": "integratedTerminal",
            "internalConsoleOptions": "neverOpen",
            "skipFiles": ["<node_internals>/**"]
        },
        {
            "name": "Hardhat Tests",
            "type": "node",
            "request": "launch",
            "runtimeExecutable": "${workspaceFolder}/contracts/node_modules/.bin/hardhat",
            "args": ["test"],
            "cwd": "${workspaceFolder}/contracts",
            "console": "integratedTerminal",
            "skipFiles": ["<node_internals>/**"]
        },
        {
            "name": "Hardhat Deploy Upgrade",
            "type": "node",
            "request": "launch",
            "runtimeExecutable": "${workspaceFolder}/contracts/node_modules/.bin/hardhat",
            "args": ["run", "scripts/deploy_upgrade.js", "--network", "sepolia"],
            "cwd": "${workspaceFolder}/contracts",
            "console": "integratedTerminal",
            "skipFiles": ["<node_internals>/**"]
        }
    ]
}
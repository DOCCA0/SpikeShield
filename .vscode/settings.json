{
    "files.eol": "\n",
    "go.useLanguageServer": true,
    "gopls": {
        "analyses": {
            "unusedparams": true,  // 检查未使用的参数
            "unusedwrite": true,   // 检查未使用的写入
            "ST1000": false
        }
    },
    "editor.showUnused": true,  // 再次确认这一项必须是 true
    "workbench.colorCustomizations": {
        // 这里直接修改“不必要代码”的显示样式
        // opacity 越小越透明（越淡）。范围 00-ff。
        // #00000088 表示让它半透明（变暗）。
        "editorUnnecessaryCode.opacity": "#00000088",
        
        // 如果您想做得更绝，可以直接给它加个显眼的颜色（比如暗灰色）
        // 注意：如果有 opacity，border 可能会看不清，建议先只试 opacity
        // "editorUnnecessaryCode.border": "#ff0000" 
    }
}